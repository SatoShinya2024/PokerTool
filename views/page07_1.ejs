<%- include('header_07', title) %>
<main class="container-fliud">
    <h1 class="text-center text-light display-1">お気に入りリスト</h1>
    <p class="text-center mt-4"><button class="btn btn-light fs-2" onclick="location.href='./page07_2'">新規作成</button></p>
    <div id="history_list_wrapper" class="overflow-scroll bg-light accordion col-12 col-xl-6"></div>

    <div class="modal fade" id="text_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="text_modal">ハンドヒストリー</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body text-center">
              <div id="setting_text"></div>
              <div id="player_text" class="row justify-content-center"></div>
              <div id="board_text" style="margin: 10px 0;"></div>
              <div class="container">
                  <div class="row">
                      <div id="preflop_text" class="col"></div>
                      <div id="flop_text" class="col"></div>
                      <div id="turn_text" class="col"></div>
                      <div id="river_text" class="col"></div>
                      <div id="showdown_text"></div>
                  </div>
              </div>
          </div>
          <div class="modal-footer">
              <span id="text_switch"><button type="button" class="btn btn-info" onclick="text_change()">テキスト切り替え</button></span>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
          </div>
        </div>
      </div>
  </div>
  <div class="modal fade" id="demo_Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="demo_Modal">動画をダウンロードする</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <canvas class="border container" width="800px" height="400px" id="canvas">

          </canvas>
          <p id="test"></p>
          <p id="download_text"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
    window.addEventListener('load', (event) => {
        handhistory_list_open();
