<%- include('header_07', title) %>
<h1 class="text-center text-light display-1">お気に入りリスト新規作成</h1>
<main class="" >
    <div class="text-center row align-items-center">
        <div class="border border-5 bg-light col-12 col-xl-6 mt-4"  id="preview_wrapper">
            <div class="h-100">
                <div>
                    <div id="preview_board_wrapper">
                        <span class="fs-1">ボード </span><img src="/images/card-img/trumpdummy.JPG" hspace="2px" vspace="2px" class="cards"><img src="/images/card-img/trumpdummy.JPG" class="cards" hspace="2px" vspace="2px"><img src="/images/card-img/trumpdummy.JPG" hspace="2px" vspace="2px" class="cards"><img src="/images/card-img/trumpdummy.JPG" class="cards" hspace="2px" vspace="2px"><img src="/images/card-img/trumpdummy.JPG" hspace="2px" vspace="2px" class="cards">
                    </div>
                </div>
                <div class="fs-1">プレイヤー</div>
                <div class="h-25">
                    <div class="overflow-auto row h-100 fs-3" id="preview_player_wrapper">  
                    </div>
                </div>
                <div class="h-50">
                    <div class="overflow-scroll text-center h-100 row fs-3" id="preview_game_wrapper">
                        <div class="col-3 border">
                            <p>【プリフロップ】</p>
                            <div id="preflop"></div>
                        </div>
                        <div class="col-3 border">
                            <p>【フロップ】</p>
                            <div id="flop"></div>
                        </div>
                        <div class="col-3 border">
                            <p>【ターン】</p>
                            <div id="turn"></div>
                        </div>
                        <div class="col-3 border">
                            <p>【リバー】</p>
                            <div id="river"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="border border-5 bg-light col-12 col-xl-6 mt-4" id="handhistory_wrapper">
            <p class="display-2">ハンドヒストリー履歴</p>
            <div class="input-group mb-3">
                <input type="text" id="search_word" class="form-control fs-1" placeholder="名前、コメント、タグから検索したいワードを入力してください。" aria-label="Recipient's username" aria-describedby="button-addon">
                <button class="btn btn-outline-secondary fs-1" type="button" id="button-addon" onclick="handhistory_search()">検索</button>
            </div>
            <div class="d-flex justify-content-around">
                <button class="col-3 btn btn-secondary fs-2" onclick="show_selected()">選択項目を確認</button>
                <button class="col-3 btn btn-secondary fs-2" onclick="">検索を解除</button>
                <button type="button" class="col-3 btn btn-danger fs-2" data-bs-toggle="modal" data-bs-target="#name_Modal"">リストを作成</button>
            </div>
            <div class="h-75">
                <div class="overflow-auto h-100" id="handhistory_box">
                
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="name_Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">リストに名前を付けてください。</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <input type="text" id="list_name" class="form-control" placeholder="空白の場合、自動で名前が付けられます。">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="make_favoliteList()">登録</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
            </div>
          </div>
        </div>
      </div>
</main>
<p class="text-center mb-5 mt-4"><button class="btn btn-secondary fs-2" onclick="history.back()">戻る</button></p>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="/javascripts/Forgamesimulation.js"></script>
<script src="/javascripts/Formakehistorylist.js"></script>
<script>
window.addEventListener('load', (event) => {
    handhistory_list_show();
})
document.getElementById("search_word").addEventListener('change', () => {
    if(document.getElementById("search_word").value == ""){
        handhistory_list_show();
    }
})
</script>

