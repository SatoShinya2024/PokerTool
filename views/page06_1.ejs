<%- include('header_06', title) %>
<main class="mb-5">
    <div class="text-center row align-items-center">
        <div class="border border-5 col-12 col-xl-6 bg-light fs-3 mt-3">
            <!-- <p class="display-1">プレビュー</p> -->
            <div class="" id="preview_wrapper">
                <div id="preview_board_wrapper">
                    <span class="fs-1">ボード </span><img src="/images/card-img/trumpdummy.JPG" hspace="2px" vspace="2px" class="cards"><img src="/images/card-img/trumpdummy.JPG" class="cards" hspace="2px" vspace="2px"><img src="/images/card-img/trumpdummy.JPG" hspace="2px" vspace="2px" class="cards"><img src="/images/card-img/trumpdummy.JPG" class="cards" hspace="2px" vspace="2px"><img src="/images/card-img/trumpdummy.JPG" hspace="2px" vspace="2px" class="cards">
                </div>
                <div class="fs-1">プレイヤー</div>
                <div class="h-25">
                    <div class="overflow-auto row h-100" id="preview_player_wrapper">  
                    </div>
                </div>
                <div class="h-50">
                    <div class="overflow-scroll text-center h-100 row" id="preview_game_wrapper">
                        <div class="col-3 border">
                            <p>プリフロップ</p>
                            <div id="preflop"></div>
                        </div>
                        <div class="col-3 border">
                            <p>フロップ</p>
                            <div id="flop"></div>
                        </div>
                        <div class="col-3 border">
                            <p>ターン</p>
                            <div id="turn"></div>
                        </div>
                        <div class="col-3 border">
                            <p>リバー</p>
                            <div id="river"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="border border-5 bg-light col-12 col-xl-6 container-md mt-3" id="handhistory_wrapper">
            <p class="display-1">ハンドヒストリー履歴</p>
            <div class="input-group mb-3">
                <input type="text" id="search_word" class="form-control fs-1" placeholder="名前、コメント、タグから検索したいワードを入力してください。" aria-label="Recipient's username" aria-describedby="button-addon">
                <button class="btn btn-outline-secondary fs-1 type="button" id="button-addon" onclick="handhistory_search()">検索</button>
            </div>
            <div class="overflow-scroll fs-2 h-75" id="handhistory_box">
                
            </div>
        </div>
    </div>
    <div class="modal fade" id="demo_Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="demo_Modal">動画をダウンロードする</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <canvas class="border container" width="800px" height="400px" id="canvas">

              </canvas>
              <p id="test"></p>
              <p id="download_text"></p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
            </div>
          </div>
        </div>
    </div>
    <div class="modal fade" id="text_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="text_modal">ハンドヒストリー</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div id="setting_text"></div>
                <div id="player_text" class="row justify-content-center"></div>
                <div id="board_text" style="margin: 10px 0;"></div>
                <div class="container">
                    <div class="row">
                        <div id="preflop_text" class="col"></div>
                        <div id="flop_text" class="col"></div>
                        <div id="turn_text" class="col"></div>
                        <div id="river_text" class="col"></div>
                        <div id="showdown_text"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <span id="text_switch"><button type="button" class="btn btn-info" onclick="text_change()">テキスト切り替え</button></span>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
            </div>
          </div>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
